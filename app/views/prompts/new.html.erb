
<!-- remember to move this form to a partial to make editing/updating DRY: -->
<%= form_for @prompt do |f| %>
  <div class="row">
    <div class="col-md-2 col-xs-2">

    </div>
    <div class="col-md-8 col-xs-8">
      <h2>Submit your decree, King <%= @king.first_name_and_last_initial %></h2>

      <%= f.text_field :content, size: 80 %>
    </div>
    <div class="col-md-2 col-xs-2">

    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-5 col-xs-5">

    </div>
    <div class="col-md-2 col-xs-2">
      <%= f.submit "Decree!", class: "btn btn-primary"%>
    </div>
    <div class="col-md-5 col-xs-5">

    </div>
  </div>
<% end %>
