<div>
  <h3><strong>King <%= prompt.king.first_name_and_last_initial %></strong> has issued the following decree:</h3>

  <div class="panel-default">
    <div class="panel-heading">
      <h2 class="panel-title prompt-content">
        <strong>"<%= prompt.content %>"</strong>
      </h2>
    </div>
    <div class="panel-body">
      <%= render partial: 'responses/form', locals: {prompt: prompt} if logged_in? && prompt.current && !current_user.already_responded?(prompt.id) %>

      <%= render prompt.responses %>
    </div>
  </div>
</div>
